@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Le Marconnès - @ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&family=Raleway:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --gold: #c0a97a;
            --dark: #2c2c2c;
        }

        body {
            font-family: 'Raleway', sans-serif;
            background-color: #fdfcf9;
            color: var(--dark);
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .serif {
            font-family: 'Playfair Display', serif;
        }

        .navbar {
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            background: #fff !important;
            min-height: 80px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            padding-right: 20px;
        }

        @@media (min-width: 992px) {
            .navbar-brand {
                border-right: 1px solid #eee;
            }
        }

        .nav-link {
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--dark) !important;
            padding: 15px 10px;
        }

            .nav-link:hover {
                color: var(--gold) !important;
            }

        .dropdown-menu {
            border: none;
            border-top: 3px solid var(--gold);
            border-radius: 0;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .dropdown-item:hover {
            background-color: #fcfaf5;
            color: var(--gold);
        }

        main {
            flex: 1;
        }

        footer {
            background: var(--dark);
            color: white;
            padding: 40px 0;
        }

        /* Kleuraccenten voor verschillende rollen */
        .nav-admin {
            color: #d9534f !important;
        }
        /* Rood voor Admin */
        .nav-user {
            color: #c5a059 !important;
        }
        /* Goud voor Gast */
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">
                <img src="/img/logo.png" alt="Logo" height="80" class="me-3">
                <span class="serif text-uppercase">Le Marconnès</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Home</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accDrop" role="button" data-bs-toggle="dropdown">
                            Onze Accommodaties
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Accommodations?filter=gite">Gîtes</a></li>
                            <li><a class="dropdown-item" href="/Accommodations?filter=hotel">Hotelkamers</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Accommodations">Alle verblijven</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>

                    @* --- NIET INGELOGD --- *@
                    @if (HttpContextAccessor.HttpContext?.Session.GetString("IsLoggedIn") != "true")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-bold" href="#" id="userDrop" role="button" data-bs-toggle="dropdown">
                                Mijn Le Marconnès
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header text-uppercase small">Account</li>
                                <li><a class="dropdown-item" href="/Accounts/Login">Inloggen</a></li>
                                <li><a class="dropdown-item" href="/Accounts/Register">Registreren</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        @* --- WEL INGELOGD: ADMIN --- *@
                        @if (HttpContextAccessor.HttpContext?.Session.GetString("IsAdmin") == "true")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-admin fw-bold" href="#" id="adminDrop" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock me-1"></i> Control Panel
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header text-uppercase small">Beheer Le Marconnès</li>
                                    <li><a class="dropdown-item" href="/Admins/Index">Admin Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/Accounts/Logout">Uitloggen</a></li>
                                </ul>
                            </li>
                        }
                        @* --- WEL INGELOGD: GAST --- *@
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-user fw-bold" href="#" id="guestDrop" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @HttpContextAccessor.HttpContext?.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li class="dropdown-header text-uppercase small">Mijn Account</li>
                                    @* <li><a class="dropdown-item" href="/Accounts/MyBookings">Mijn Boekingen</a></li>
                                    <li><a class="dropdown-item" href="/Accounts/Profile">Profiel</a></li> *@
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="/Accounts/Logout">Uitloggen</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>

    @* mt-4 zorgt voor de afstand tot de navigatiebalk *@
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">

                @if (TempData["SuccessMessage"] != null || TempData["Success"] != null)
                {
                    @* mb-3 zorgt dat de melding niet aan de content eronder plakt *@
                    <div class="alert alert-success fade show shadow-sm rounded-0 border-0 border-start border-success border-4 d-inline-flex align-items-center justify-content-center p-2 px-3 mb-3" role="alert" style="max-width: 100%;">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <span>
                            @(TempData["SuccessMessage"] ?? TempData["Success"])
                        </span>
                        <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" style="position: static; padding: 0.5rem; margin: 0;"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger fade show shadow-sm rounded-0 border-0 border-start border-danger border-4 d-inline-flex align-items-center justify-content-center p-2 px-3 mb-3" role="alert" style="max-width: 100%;">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <span>
                            @TempData["Error"]
                        </span>
                        <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" style="position: static; padding: 0.5rem; margin: 0;"></button>
                    </div>
                }

            </div>
        </div>
    </div>

    <main>
        @RenderBody()
    </main>

    <footer class="text-center mt-auto">
        <div class="container">
            <p class="mb-0 opacity-75">&copy; 2026 Domaine Le Marconnès - Haute-Loire, Frankrijk</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>