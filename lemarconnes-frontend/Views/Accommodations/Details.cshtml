@model LeMarconnes.Models.AccommodationDetailViewModel
@{
    ViewData["Title"] = Model.Name;
}

<style>
    .details-hero {
        background: #343a32;
        color: white;
        padding: 80px 0 40px 0;
        margin-bottom: 40px;
    }

    .feature-icon {
        color: #c0a97a;
        font-size: 1.5rem;
        margin-right: 15px;
    }

    .price-badge {
        background-color: #c0a97a;
        color: white;
        padding: 10px 20px;
        font-size: 1.4rem;
        font-weight: bold;
        border-radius: 4px;
    }

    .bed-card {
        border: 1px solid #eee;
        transition: all 0.3s ease;
        background: #fff;
    }

        .bed-card:hover {
            border-color: #c0a97a;
            background-color: #fcfbf8;
        }

    .btn-gold {
        background-color: #c0a97a;
        color: white;
        border: none;
        padding: 18px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: background 0.2s;
        text-decoration: none;
        display: block;
        text-align: center;
    }

        .btn-gold:hover {
            background-color: #ac9669;
            color: white;
        }
</style>

<div class="details-hero">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Accommodations" class="text-white-50 text-decoration-none">Accommodaties</a></li>
                <li class="breadcrumb-item active text-white" aria-current="page">@Model.Name</li>
            </ol>
        </nav>
        <h1 class="display-4 serif">@Model.Name</h1>
        <p class="lead">
            <span class="badge bg-light text-dark shadow-sm">
                <i class="bi @(Model.IsGite ? "bi-house" : "bi-building") me-1"></i>
                @(Model.IsGite ? "Gîte" : "Hotelkamer")
            </span>
            <span class="ms-3"><i class="bi bi-people me-1"></i> Max. @Model.Capacity personen</span>
        </p>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        @* --- LINKER KOLOM: Beschrijving & Slaapconfiguratie --- *@
        <div class="col-lg-8">
            <div class="mb-5">
                <h3 class="serif mb-3">Over deze accommodatie</h3>
                <p class="text-muted lead" style="white-space: pre-line;">@Model.Description</p>
            </div>

            <hr />

            <div class="mt-5">
                <h4 class="serif mb-4">Slaapconfiguratie</h4>
                <div class="row">
                    @if (Model.AccommodationBeds != null && Model.AccommodationBeds.Any())
                    {
                        @foreach (var item in Model.AccommodationBeds)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="bed-card p-3 d-flex align-items-center rounded shadow-sm">
                                    <i class="bi bi-door-closed feature-icon"></i>
                                    <div>
                                        <div class="fw-bold text-dark">@(item.Bed?.Type ?? "Bed")</div>
                                        <div class="small text-muted">Aantal aanwezig: @item.Quantity</div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <p class="text-muted italic"><i class="bi bi-info-circle me-2"></i>Neem contact op voor de specifieke beddenopstelling.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        @* --- RECHTER KOLOM: Boeken & Faciliteiten --- *@
        <div class="col-lg-4">
            <div class="card border-0 shadow sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-body p-4 text-center">
                    <div class="price-badge mb-4 shadow-sm">
                        € @Model.RatePerNight.ToString("F2") <span class="small fw-normal">/ nacht</span>
                    </div>

                    <div class="d-grid gap-3">
                        @* Verander asp-controller naar "Reservations" (met een s) *@
                        <a href="/Reservations/Create/@Model.Id" class="btn btn-gold btn-lg shadow-sm rounded-0">
                            <i class="bi bi-calendar-check me-2"></i>Boek Nu 
                        </a>

                        <a href="/Accommodations" class="btn btn-outline-secondary btn-sm border-0">
                            <i class="bi bi-arrow-left me-1"></i>Bekijk andere opties
                        </a>
                    </div>

                    <hr class="my-4" />

                    <div class="text-start">
                        <h5 class="serif mb-3 small text-uppercase fw-bold text-muted">Faciliteiten</h5>
                        <ul class="list-unstyled mb-0">
                            @* --- Logica: Alleen tonen wat TRUE is --- *@
                            @if (Model.IsGite)
                            {
                                @if (Model.EntireProperty)
                                {
                                    <li class="mb-2"><i class="bi bi-house-check text-success me-2"></i> Gehele woning</li>
                                }
                                @if (Model.Garden)
                                {
                                    <li class="mb-2"><i class="bi bi-tree text-success me-2"></i> Privé tuin</li>
                                }
                                @if (Model.ParkingAvailable)
                                {
                                    <li class="mb-2"><i class="bi bi-p-circle text-success me-2"></i> Gratis parkeren</li>
                                }
                            }
                            else
                            {
                                @if (Model.RoomNumber > 0)
                                {
                                    <li class="mb-2"><i class="bi bi-hash text-info me-2"></i> Aantal Kamers: @Model.RoomNumber</li>
                                }
                                @if (Model.PrivateBathroom)
                                {
                                    <li class="mb-2"><i class="bi bi-water text-info me-2"></i> Eigen badkamer</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>