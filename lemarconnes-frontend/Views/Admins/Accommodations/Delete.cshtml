@model LeMarconnes.DTOs.AccommodationDto
@{
    ViewData["Title"] = "Verwijderen bevestigen - LeMarconnes";
    Layout = "_Layout";
}

<div class="container my-5 text-center" style="max-width: 600px;">
    <div class="card border-0 shadow-lg rounded-0 p-5">
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
        </div>

        <h2 class="serif mb-3">Weet u het zeker?</h2>

        <div class="alert alert-light border rounded-0 mb-4">
            <p class="mb-1 text-muted small text-uppercase">U gaat verwijderen:</p>
            <h4 class="text-dark">@Model.Name</h4>
            @if (Model.IsHotelRoom)
            {
                <span class="badge bg-secondary rounded-0">Hotelkamer</span>
            }
            else
            {
                <span class="badge bg-dark rounded-0">Gîte</span>
            }
        </div>

        <p class="text-muted mb-4">
            Deze actie verwijdert de accommodatie definitief uit de database van <strong>LeMarconnes</strong>.
            Dit kan niet ongedaan worden gemaakt.
        </p>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-center gap-3">
                <a href="/Admin/Accommodations" class="btn btn-outline-dark rounded-0 px-4">
                    <i class="bi bi-arrow-left me-2"></i>Annuleren
                </a>

                <button type="submit" class="btn btn-danger rounded-0 px-4">
                    <i class="bi bi-trash3 me-2"></i>Definitief Verwijderen
                </button>
            </div>
        </form>
    </div>
</div>