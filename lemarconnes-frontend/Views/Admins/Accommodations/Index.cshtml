@model List<LeMarconnes.DTOs.AccommodationDto>
@{
    ViewData["Title"] = "Accommodaties Beheren";
    Layout = "_Layout";
    string? filter = ViewBag.CurrentFilter as string;
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="serif">LeMarconnes Accommodaties</h2>
        <a href="/Admins/Accommodations/Create" class="btn btn-dark rounded-0">
            <i class="bi bi-plus-lg"></i> Nieuwe Toevoegen
        </a>
    </div>

    <div class="btn-group mb-4 rounded-0">
        <a href="/Admins/Accommodations" class="btn @(string.IsNullOrEmpty(filter) ? "btn-dark" : "btn-outline-dark") rounded-0">Alles</a>
        <a href="/Admins/Accommodations?filter=gite" class="btn @(filter == "gite" ? "btn-dark" : "btn-outline-dark") rounded-0">Gîtes</a>
        <a href="/Admins/Accommodations?filter=hotel" class="btn @(filter == "hotel" ? "btn-dark" : "btn-outline-dark") rounded-0">Hotelkamers</a>
    </div>

    <div class="table-responsive bg-white shadow-sm p-3">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Type</th>
                    <th>Naam</th>
                    <th>Capaciteit</th>
                    <th>Prijs p/n</th>
                    <th class="text-end">Acties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.IsGite)
                            {
                                <span class="badge bg-success rounded-0">Gîte</span>
                            }
                            else
                            {
                                <span class="badge bg-primary rounded-0">Hotel</span>
                            }
                        </td>
                        <td class="fw-bold">@(string.IsNullOrEmpty(item.Name) ? "Naamloze accommodatie" : item.Name)</td>
                        <td><i class="bi bi-people"></i> @item.Capacity pers.</td>
                        <td>€ @item.RatePerNight</td>
                        <td class="text-end text-nowrap">
                            <a href="/Admins/Accommodations/Details/@item.Id" class="btn btn-outline-info rounded-0 me-1">
                                <i class="bi bi-eye me-1"></i> Details
                            </a>
                            <a href="/Admins/Accommodations/Edit/@item.Id" class="btn btn-outline-dark rounded-0 me-1">
                                <i class="bi bi-pencil me-1"></i> Bewerken
                            </a>
                            <a href="/Admins/Accommodations/Delete/@item.Id" class="btn btn-outline-danger rounded-0">
                                <i class="bi bi-trash me-1"></i> Verwijderen
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>