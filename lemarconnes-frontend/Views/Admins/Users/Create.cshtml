@{
    ViewData["Title"] = "Nieuwe Gebruiker - LeMarconnes";
    Layout = "_Layout";
}

<style>
    .create-card {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    .form-label {
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #777;
    }

    .form-control {
        border-radius: 0;
        border: 1px solid #e0e0e0;
        padding: 10px 15px;
    }

        .form-control:focus {
            border-color: #c5a059;
            box-shadow: none;
        }

    .btn-save {
        background-color: #333;
        color: white;
        border-radius: 0;
        padding: 12px 30px;
        text-transform: uppercase;
        letter-spacing: 1px;
        border: none;
        transition: 0.3s;
    }

        .btn-save:hover {
            background-color: #c5a059;
        }
    /* De Admin Switch styling */
    .form-check-input:checked {
        background-color: #c5a059;
        border-color: #c5a059;
    }
</style>

<div class="container">
    <div class="create-card">
        <h2 class="serif mb-4 text-center">Gebruiker Toevoegen</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger rounded-0 small">@ViewBag.Error</div>
        }

        <form method="post" asp-action="CreateUser" asp-controller="Admin">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label">Volledige Naam</label>
                    <input type="text" name="name" class="form-control" placeholder="bijv. Sophie de Vries" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">E-mailadres</label>
                    <input type="email" name="email" class="form-control" placeholder="naam@voorbeeld.nl" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Wachtwoord</label>
                    <input type="password" name="password" class="form-control" placeholder="••••••••" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Telefoonnummer</label>
                    <input type="text" name="phoneNumber" class="form-control" placeholder="+31 6 12345678">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Adres</label>
                    <input type="text" name="address" class="form-control" placeholder="Straat en woonplaats">
                </div>

                <div class="col-md-12 mb-4 mt-2">
                    <div class="form-check form-switch p-3 border rounded-0 bg-light d-flex justify-content-between align-items-center">
                        <label class="form-check-label fw-bold" for="isAdmin">
                            👤 Geef beheerdersrechten (Admin)
                        </label>
                        <input class="form-check-input" type="checkbox" name="isAdmin" id="isAdmin" value="true">
                    </div>
                    <small class="text-muted">Let op: Een admin kan alle instellingen van LeMarconnes wijzigen.</small>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="/Admin/Index" class="text-muted small text-decoration-none">← Terug naar dashboard</a>
                <button type="submit" class="btn btn-save">Gebruiker Opslaan</button>
            </div>
        </form>
    </div>
</div>