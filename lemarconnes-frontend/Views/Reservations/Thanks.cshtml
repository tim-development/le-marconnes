@{
    ViewData["Title"] = "Bedankt";
    var isSplit = ViewBag.PaymentPlan == "split";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow-sm border-0 p-5 rounded-0">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h1 style="font-family: 'Playfair Display', serif;">Merci!</h1>
                <p class="text-muted lead">Uw reservering is succesvol verwerkt.</p>

                <div class="my-4 p-3 bg-light">
                    @if (isSplit)
                    {
                        <p class="mb-0">U heeft gekozen voor een <strong>aanbetaling</strong>. Het restant betaalt u bij aankomst.</p>
                    }
                    else
                    {
                        <p class="mb-0">Uw verblijf is <strong>volledig betaald</strong>. U hoeft niets meer te doen.</p>
                    }
                </div>

                <div class="d-grid gap-2">
                    <a href="/" class="btn btn-dark rounded-0">Terug naar Home</a>
                </div>
            </div>
        </div>
    </div>
</div>